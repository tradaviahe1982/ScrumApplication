@model ScrumApplication.Models.RoleViewModels.ApplicationRoleDetailViewModel
@{
    ViewData["Title"] = "Xóa quyền";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="RoleName">Tên quyền</label>
                    <input asp-for="RoleName" class="form-control" disabled />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" disabled></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-danger" onclick = "return confirm('Bạn có muốn xóa quyền này không?');">Xóa</button>
                <a asp-controller="Role" asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
