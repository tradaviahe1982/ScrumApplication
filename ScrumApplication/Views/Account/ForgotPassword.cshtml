@using ScrumApplication.Models.AccountViewModels
@model ScrumApplication.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Bạn có quên mật khẩu?";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-5">
            <section>
                <form asp-action="ForgotPassword" method="post">
                    <h4>Nhập thư điện tử của bạn.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"> Thư điện tử</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Gửi thư điện tử để lấy lại mật khẩu</button>
                </form>
            </section>
        </div>
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h4>Mô hình phát triển phần mềm nhanh Scrum.</h4>
                <hr />
                <div>
                    <p>
                        Ứng dụng có thể cung cấp cho bạn những công cụ tuyệt vời để quản trị dự án phần mềm với mô hình Scrum.
                        Xem <a href="http://vnptit.vn/">công văn thực hiện </a> áp dụng mô hình Scrum cho các dự án phần mềm của công ty tại đây.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts 
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
