@*@model ScrumApplication.Models.ProjectViewModels.ProjectIndexViewModel*@
@model ReflectionIT.Mvc.Paging.PagingList<ScrumApplication.Models.ProjectViewModels.ProjectDetailViewModel>
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Danh sách dự án";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <section>
                            <form method="get" class="form-inline">
                                <input name="filter" class="form-control" placeholder="Bạn tìm dự án theo tên" value="@Model.RouteValue["Filter"]" /> &nbsp
                                <button type="submit" class="btn btn-info">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Tìm kiếm
                                </button>
                            </form>
                            <hr />
                            <nav aria-label="Phân trang">
                                <partial name="PagerBootstrap4" model="@this.Model" />
                            </nav>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Tên dự án</th>
                                        <th>Mô tả dự án</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày dự kiến kết thúc</th>
                                        <th> Trạng thái</th>
                                        <th class="text-center" style="width: 220px;">Chức Năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var project in Model)
                                    {
                                        <tr>
                                            <td>@project.Name</td>
                                            <td>@project.Description</td>
                                            <td>@project.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td>@project.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td>@project.ProjectStatusID</td>
                                            <td class="text-center">
                                                <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning">Sửa</a>
                                                <a asp-controller="Project" asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Xóa</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a asp-controller="Project" asp-action="Create" class="btn btn-success">Thêm mới dự án</a>
                        </section>
                    </div>
                </div>

            </div>

