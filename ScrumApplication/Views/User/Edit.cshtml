@using ScrumApplication.Models.ManageViewModels
@using ScrumApplication.Views.Manage
@model ScrumApplication.Models.UserViewModels.UserEditViewModel
@{
    ViewData["Title"] = "Sửa thông tin người dùng";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    @Html.Partial("_StatusMessage", Model.StatusMessage)

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group">
                            <label asp-for="FirstName">Họ</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Tên</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username">Tài khoản</label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Thư điện tử</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="IsAdmin">
                                    <input asp-for="IsAdmin" />
                                    @Html.DisplayNameFor(m => m.IsAdmin)
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Cập nhật người dùng</button>
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card" >      
                    <div class="card-body">
                        <br />
                        <p class="text-center">
                            <img class="card-img-top" src="@Model.ImageUrl" alt="Ảnh cá nhân" style="width: 150px;">
                        </p>
                        <p class="card-text">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input asp-for="ChangeImage" class="custom-control-input" type="checkbox" />
                                    <label asp-for="ChangeImage" class="custom-control-label">Thay đổi ảnh</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image">Ảnh cá nhân</label>
                                <input asp-for="Image" type="file" class="form-control-file" />
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
