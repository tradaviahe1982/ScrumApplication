@*@model ScrumApplication.Models.UserViewModels.UserIndexViewModel*@
@model ReflectionIT.Mvc.Paging.PagingList<ScrumApplication.Models.UserViewModels.UserDetailViewModel>
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Danh sách người dùng";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <section>
                        <form method="get" class="form-inline">
                            <input name="filter" class="form-control" placeholder="Bạn tìm người dùng theo địa chỉ mail" value="@Model.RouteValue["Filter"]" /> &nbsp
                            <button type="submit" class="btn btn-info">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Tìm kiếm
                            </button>
                        </form>
                        <hr />
                        <nav aria-label="Phân trang">
                            <partial name="PagerBootstrap4" model="@this.Model" />
                        </nav>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 60px;">Ảnh cá nhân</th>
                                    <th>Họ</th>
                                    <th>Tên</th>
                                    <th>Tài khoản</th>
                                    <th>Thư điện tử</th>
                                    <th class="text-center" style="width: 180px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <img src="@user.ImageUrl" alt="User Image" class="img-circle user-image" />
                                        </td>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Username</td>
                                        <td>@user.Email</td>
                                        <td class="text-center">
                                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Sửa</a>
                                            <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-controller="User" asp-action="Create" class="btn btn-success">Thêm mới người dùng</a>
                    </section>
                </div>
            </div>
        </div>
     </div>
</div>