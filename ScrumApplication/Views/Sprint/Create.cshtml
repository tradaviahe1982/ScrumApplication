@using ScrumApplicationData.Models;
@model ScrumApplication.Models.SprintViewModels.SprintDetailViewModel
@{
    ViewData["Title"] = "Tạo mới Sprint";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <section>
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label>Danh sách dự án</label>
                                        @Html.DropDownListFor(model => model.ProjectId, new SelectList(ViewData["Projects"] as IEnumerable<Project>, "Id", "Name"), "Bạn chọn dự án", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label>Trạng thái Sprint</label>
                                        @Html.DropDownListFor(model => model.SprintStatusId, new SelectList(ViewData["SprintStatuses"] as IEnumerable<SprintStatus>, "Id", "Name"), "Bạn chọn trạng thái Sprint", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Number">Số sprint</label>
                                <input asp-for="Number" class="form-control" />
                                <span asp-validation-for="Number" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Mô tả</label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate">Ngày bắt đầu</label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate">Ngày dự kiến kết thúc</label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Tạo mới Sprint</button>
                            <a asp-controller="Sprint" asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
