@*@model ScrumApplication.Models.SprintViewModels.SprintIndexViewModel*@
@model ReflectionIT.Mvc.Paging.PagingList<ScrumApplication.Models.SprintViewModels.SprintDetailViewModel>
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Danh Sách Sprint";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
  
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <section>
                        <form method="get" class="form-inline">
                            <input name="filter" class="form-control" placeholder="Bạn tìm Sprint theo tên" value="@Model.RouteValue["Filter"]" /> &nbsp
                            <button type="submit" class="btn btn-info">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Tìm kiếm
                            </button>
                        </form>
                        <hr />
                        <nav aria-label="Phân trang">
                            <partial name="PagerBootstrap4" model="@this.Model" />
                        </nav>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Mô tả </th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày dự kiến kết thúc</th>
                                    <th>Trạng thái </th>
                                    <th class="text-center" style="width: 220px;">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sprint in Model)
                                {
                                    <tr>
                                        <td>@sprint.Number</td>
                                        <td>@sprint.Description</td>
                                        <td>@sprint.StartDate.ToString("dd/MM/yyyy")</td>
                                        <td>@sprint.EndDate.ToString("dd/MM/yyyy")</td>
                                        <td>@sprint.SprintStatusId</td>
                                        <td class="text-center">
                                            <a asp-controller="Sprint" asp-action="Edit" asp-route-id="@sprint.Id" class="btn btn-warning">Sửa</a>
                                            <a asp-controller="Sprint" asp-action="Delete" asp-route-id="@sprint.Id" class="btn btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-controller="Sprint" asp-action="Create" class="btn btn-success">Thêm mới</a>
                    </section>
                </div>
            </div>
        </div>
        </div>
    </div>

